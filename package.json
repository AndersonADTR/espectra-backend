{
  "name": "espectra-backend",
  "version": "1.0.0",
  "description": "Backend service for Spectra platform",
  "main": "index.js",
  "scripts": {
    "start": "serverless offline",
    "deploy": "serverless deploy",
    "deploy:prod": "serverless deploy --stage prod",
    "remove": "serverless remove",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write '**/*.{ts,js,json,md}'",
    "type-check": "tsc --noEmit",
    "clean": "rimraf node_modules package-lock.json .build .serverless",
    "prepare": "husky install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "services/**/*.ts",
      "!services/**/*.d.ts"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-api-gateway": "^3.699.0",
    "@aws-sdk/client-apigatewaymanagementapi": "^3.699.0",
    "@aws-sdk/client-cloudwatch": "^3.705.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.693.0",
    "@aws-sdk/client-dynamodb": "^3.693.0",
    "@aws-sdk/client-elasticache": "^3.699.0",
    "@aws-sdk/client-eventbridge": "^3.703.0",
    "@aws-sdk/client-kms": "^3.712.0",
    "@aws-sdk/client-secrets-manager": "^3.699.0",
    "@aws-sdk/client-sns": "^3.712.0",
    "@aws-sdk/client-sqs": "^3.696.0",
    "@aws-sdk/client-wafv2": "^3.693.0",
    "@aws-sdk/endpoint-cache": "^3.693.0",
    "@aws-sdk/lib-dynamodb": "^3.699.0",
    "@aws-sdk/middleware-endpoint-discovery": "^3.693.0",
    "@aws-sdk/middleware-retry": "^3.370.0",
    "@aws-sdk/protocol-http": "^3.370.0",
    "@aws-sdk/smithy-client": "^3.370.0",
    "@aws-sdk/types": "^3.692.0",
    "@aws-sdk/util-dynamodb": "^3.693.0",
    "@botpress/sdk": "^1.6.2",
    "@middy/core": "^5.5.1",
    "@smithy/middleware-retry": "^3.0.27",
    "@smithy/protocol-http": "^4.1.7",
    "@smithy/smithy-client": "^3.4.4",
    "@smithy/util-middleware": "^3.0.10",
    "@smithy/util-retry": "^3.0.10",
    "@types/redis": "^4.0.10",
    "aws-jwt-verify": "^4.0.1",
    "aws-xray-sdk": "^3.10.2",
    "aws-xray-sdk-core": "^3.10.2",
    "axios": "^1.7.8",
    "dotenv": "^16.4.5",
    "fast-xml-parser": "^4.5.0",
    "husky": "^9.1.7",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "mnemonist": "^0.39.8",
    "redis": "^4.7.0",
    "serverless-domain-manager": "^8.0.0",
    "serverless-plugin-tracing": "^2.0.0",
    "serverless-prune-plugin": "^2.1.0",
    "strnum": "^1.0.5",
    "tslib": "^2.8.1",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "serverless": "^4.4.10",
    "serverless-iam-roles-per-function": "^3.2.0",
    "serverless-offline": "^14.3.4",
    "ts-loader": "^9.5.1",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "^5.6.3",
    "webpack": "^5.96.1",
    "webpack-node-externals": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "serverless",
    "aws",
    "typescript",
    "lambda"
  ],
  "author": "",
  "license": "ISC"
}
